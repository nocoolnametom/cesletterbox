{
  "name": "cesletterbox",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.html",
  "scripts": {
    "build": "NODE_ENV=production npm run js && npm run templates && npm run css && npm run images",
    "css": "postcss --no-map -c config/postcss.json src/css/*.css",
    "css-watch": "postcss -w --map file -c config/postcss.json src/css/*.css",
    "images": "cpx './src/**/*.{gif,jpeg,png,jpg,svg}' dist",
    "images-watch": "cpx './src/**/*.{gif,jpeg,png,jpg,svg}' dist --watch",
    "js": "npm-run-all --parallel rollup-about rollup-chat rollup-index rollup-stats",
    "js-watch": "npm-run-all --parallel rollup-about-watch rollup-chat-watch rollup-index-watch rollup-stats-watch",
    "prepublish": "rm -Rf dist ; npm run build",
    "reload": "livereload 'dist/' -d",
    "rollup-about": "rollup --config config/rollup.config.about.js",
    "rollup-about-watch": "rollup -w --config config/rollup.config.about.js",
    "rollup-chat": "rollup --config config/rollup.config.chat.js",
    "rollup-chat-watch": "rollup -w --config config/rollup.config.chat.js",
    "rollup-index": "rollup --config config/rollup.config.index.js",
    "rollup-index-watch": "rollup -w --config config/rollup.config.index.js",
    "rollup-stats": "rollup --config config/rollup.config.stats.js",
    "rollup-stats-watch": "rollup -w --config config/rollup.config.stats.js",
    "start": "http-server dist/ -s -o -p 8886 ",
    "templates": "node build/templates.js index dist/ ; node build/templates.js chat dist/ ; node build/templates.js about dist/ ; node build/templates.js stats dist/",
    "templates-watch": "watch 'npm run templates' src/templates/pages/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm-run-all --parallel reload js-watch css-watch templates-watch images-watch start"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015-rollup": "^1.2.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "cpx": "^1.5.0",
    "cssnano": "^3.7.4",
    "empty": "^0.10.1",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-plugin-flow-vars": "^0.5.0",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-react": "^6.2.0",
    "handlebars": "^4.0.5",
    "html-minifier": "^3.0.2",
    "livereload": "^0.5.0",
    "npm-run-all": "^3.1.0",
    "postcss-cli": "^2.6.0",
    "postcss-color-function": "^2.0.1",
    "postcss-cssnext": "^2.8.0",
    "postcss-import": "^8.1.2",
    "postcss-nested": "^1.0.0",
    "postcss-simple-vars": "^3.0.0",
    "rollup": "^0.34.13",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^4.1.0",
    "rollup-plugin-filesize": "^0.5.5",
    "rollup-plugin-json": "^2.0.2",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-postcss": "^0.2.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^2.5.0",
    "watch": "^0.19.2"
  },
  "dependencies": {
    "http-server": "^0.9.0"
  }
}
