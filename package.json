{
  "name": "cesletterbox",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.html",
  "scripts": {
    "build": "NODE_ENV=production rollup --config rollup.config.index.js && npm run html && npm run images",
    "dev": "rollup -w --config rollup.config.index.js",
    "html": "cpx './src/html/**/*.html' dist",
    "html-watch": "cpx './src/html/**/*.html' dist --watch",
    "images": "cpx './src/**/*.{gif,jpeg,png,jpg}' dist",
    "images-watch": "cpx './src/**/*.{gif,jpeg,png,jpg}' dist --watch",
    "prepublish": "rm -Rf dist ; npm run build",
    "reload": "livereload 'dist/' -d",
    "start": "http-server dist/ -s -o -p 8886 ",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm-run-all --parallel reload dev html-watch images-watch start"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015-rollup": "^1.2.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "cpx": "^1.5.0",
    "cssnano": "^3.7.4",
    "empty": "^0.10.1",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-plugin-flow-vars": "^0.5.0",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-react": "^6.2.0",
    "livereload": "^0.5.0",
    "npm-run-all": "^3.1.0",
    "postcss-cssnext": "^2.8.0",
    "postcss-nested": "^1.0.0",
    "postcss-simple-vars": "^3.0.0",
    "rollup": "^0.34.13",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^4.1.0",
    "rollup-plugin-filesize": "^0.5.5",
    "rollup-plugin-json": "^2.0.2",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-postcss": "^0.2.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^2.5.0"
  },
  "dependencies": {
    "http-server": "^0.9.0"
  }
}
